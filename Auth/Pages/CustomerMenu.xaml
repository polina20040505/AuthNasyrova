<Page x:Class="Auth.Pages.CustomerMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Auth.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CustomerMenu">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="257"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button Content="Переход 1" Click="Button_Click" Grid.Column="1" Grid.Row="1" Height="20"/>
        <Button Content="Переход 2" Click="Button_Click_1" Grid.Column="1" Grid.Row="1" Height="20" Margin="0,50,0,0"/>
        <Button Content="Переход 3" Click="Button_Click_2" Grid.Column="1" Grid.Row="1" Height="20" Margin="0,0,0,50"/>

    </Grid>
</Page>
